<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativo"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_height="280dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >

        <EditText
            android:id="@+id/texto_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:autofillHints=""
            android:gravity="center"
            android:inputType="text"
            android:maxLines="5"
            android:text="@string/ingresarTexto"

            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023"
            tools:ignore="LabelFor,DuplicateSpeakableTextCheck">


        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativo2"
        android:layout_width="match_parent"

        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/relativo"
        tools:layout_editor_absoluteX="-16dp">


        <Button
            android:id="@+id/botonComparar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/botonComparar"

            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativo3"
        android:layout_width="match_parent"

        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/relativo2"
        tools:layout_editor_absoluteX="-16dp">



        <TextView
            android:id="@+id/textoVista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"

            >

        </TextView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativo4"
        android:layout_width="match_parent"

        android:layout_height="280dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/relativo3"
        tools:layout_editor_absoluteX="-16dp">

        <EditText
            android:autofillHints=""
            android:inputType="text"
            android:id="@+id/texto_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/ingresarTexto"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023"
            tools:ignore="LabelFor">


        </EditText>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>